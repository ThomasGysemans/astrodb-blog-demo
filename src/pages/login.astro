---
import PageLayout from "../layouts/PageLayout.astro";
---

<PageLayout title="Login">
    <h1 class="font-bold text-5xl mb-10 text-center">Se connecter</h1>
    <div class="flex justify-center w-full">
        <form class="flex flex-col items-center w-2/4 min-w-[200px] max-w-[350px]">
            <div>
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Adresse mail" required />
            </div>
            <div>
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="password" placeholder="Mot de passe" required />
            </div>
            <button class="bg-stone-800 hover:bg-stone-950 text-white rounded-sm px-4 py-2 w-full">Se connecter</button>
        </form>
    </div>
</PageLayout>

<style lang="scss">
    form div {
        @apply w-full;

        label {
            @apply block text-lg mb-3 leading-tight;
        }

        input {
            @apply block border border-gray-200 rounded-sm shadow-sm mb-6 w-full;
            @apply py-2 px-4;
        }
    }
</style>